<h1>Gossip List</h1>

<table class="table table-dark">
  <thead>

    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Message</th>
      <th scope="col">Show</th>
    </tr>
  </thead>

  <tbody>
    <% i = 1 %>
    <% @gossips.each do |gossip| %>
    <tr>
      <th scope="row"><%= i %></th>
      <td><%=gossip.anonymous_author%></td>
      <td><%=gossip.comment%></td>
      <td><%= link_to 'Show the comment', gossip_path(gossip)%></td>
      <% i = i + 1%>
    </tr>

  </tbody>
  <%end%>

</table>
